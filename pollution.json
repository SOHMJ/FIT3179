{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/SOHMJ/Homework/main/COVID_Cases_Mortality_Features_By_Country.csv"
    },
    "transform": [
        {
            "calculate": "200000000 * floor(datum.Population_Size / 200000000)",
            "as": "temp_population"
        },
        {
            "calculate": "datum.temp_population === 0 ? '0 - 200M' : datum.temp_population === 200000000 ? '200M - 400M' : datum.temp_population === 600000000 ? '' : '1.2B - 1.4B'",
            "as": "Population_Category"
        },
        {
            "aggregate": [
                {
                    "op": "average",
                    "field": "Indoor_Pollution_Death_Rate",
                    "as": "Indoor"
                },
                {
                    "op": "average",
                    "field": "Outdoor_Pollution_Death_Rate",
                    "as": "Outdoor"
                }
            ],
            "groupby": [
                "Population_Category"
            ]
        },
        {
            "fold": [
                "Indoor",
                "Outdoor"
            ],
            "as": [
                "PollutionType",
                "DeathRate"
            ]
        }
    ],
    "layer": [
        {
            "mark": "bar",
            "encoding": {
                "x": {
                    "field": "Population_Category",
                    "type": "nominal",
                    "title": "Population Range",
                    "axis": {
                        "labelAngle": 0
                    },
                    "sort": [
                        "0 - 200M",
                        "200M - 400M",
                        "",
                        "1.2B - 1.4B"
                    ]
                },
                "y": {
                    "field": "DeathRate",
                    "type": "quantitative",
                    "title": "Death Rate"
                },
                "color": {
                    "field": "PollutionType",
                    "type": "nominal",
                    "title": "Pollution Type",
                    "scale": {
                        "range": [
                            "#FF0000",
                            "#0000FF"
                        ]
                    }
                },
                "opacity": {
                    "value": 0.6
                },
                "tooltip": [
                    {
                        "field": "Population_Category",
                        "title": "Population Category"
                    },
                    {
                        "field": "DeathRate",
                        "title": "Death Rate"
                    },
                    {
                        "field": "PollutionType",
                        "title": "Pollution Type"
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "center",
                "baseline": "bottom",
                "dx": 50,
                "dy": -100,
                "fontSize": 12,
                "fontStyle": "italic"
            },
            "encoding": {
                "text": {
                    "value": "Larger population size tends to have higher indoor pollution death rate."
                },
                "color": {
                    "value": "black"
                },
                "opacity": {
                    "condition": {
                        "test": "datum.Population_Category == '1.2B - 1.4B'",
                        "value": 1
                    },
                    "value": 0
                }
            }
        },
        {
            "mark": {
                "type": "rect",
                "fill": "rgba(255, 0, 0, 0)",
                "stroke": "#FF0000",
                "strokeWidth": 3,
                "width": 100,
                "height": 30
            },
            "encoding": {
                "x": {"value": 420},
                "y": {"value": 410}
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "center",
                "baseline": "bottom",
                "dx": 190,
                "dy": 240,
                "fontSize": 12,
                "fontStyle": "italic"
            },
            "encoding": {
                "text": {
                    "value": "NOTE: The population range is massively increased."
                },
                "color": {
                    "value": "#FF0000"
                },
                "opacity": {
                    "condition": {
                        "test": "datum.Population_Category == '1.2B - 1.4B'",
                        "value": 1
                    },
                    "value": 0
                }
            }
        }
    ]
}