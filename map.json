{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "params": [
        {
            "name": "Population_Above",
            "value": 1000000,
            "bind": {
                "input": "range",
                "min": 1000000,
                "max": 100000000,
                "step": 1000000,
                "name": "Minimum Population: "
            }
        }
    ],
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "data": {
                "graticule": {
                    "step": [
                        0.1,
                        0.1
                    ]
                }
            },
            "mark": {
                "type": "geoshape",
                "fill":"aliceblue"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/SOHMJ/Homework/main/ne_110m.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        {
            "data": {
                "graticule": {
                    "step": [
                        20,
                        20
                    ]
                }
            },
            "mark": {
                "type": "geoshape",
                "stroke": "#000000"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/SOHMJ/Homework/main/COVID_Cases_Mortality_Features_By_Country.csv"
            },
            "transform": [
                {
                    "filter": "datum.Longtitude != 'nan' || datum.Latitude != 'nan'"
                },
                {
                    "filter": "datum.Cases > 0"
                },
                {
                    "filter": "datum.Population_Size > Population_Above"
                },
                {
                    "calculate": "datum.Cases/datum.Population_Size * 10000",
                    "as": "Cases per 10,000 Population"
                }
            ],
            "mark": {
                "type": "circle",
                "tooltip": {
                    "content": "data"
                }
            },
            "encoding": {
                "longitude": {
                    "field": "Longtitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "Latitude",
                    "type": "quantitative"
                },
                "size": {
                    "field": "Population_Size",
                    "type": "quantitative",
                    "title": "Population Size",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            1000000,
                            10000000,
                            100000000,
                            500000000,
                            1000000000
                        ],
                        "range": [
                            10,
                            50,
                            150,
                            450,
                            750,
                            1200
                        ]
                    },
                    "legend": {
                        "format": ".1s"
                    }
                },
                "color": {
                    "field": "Cases",
                    "type": "quantitative",
                    "title": "Cases",
                    "scale": {
                        "scheme": "oranges"
                    }
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "Population_Size",
                        "type": "quantitative",
                        "title": "Population Size"
                    },
                    {
                        "field": "Cases",
                        "type": "quantitative",
                        "title": "Cases"
                    },
                    {
                        "field": "Deaths",
                        "type": "quantitative",
                        "title": "Deaths"
                    }
                ]
            }
        }
    ]
}