{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/SOHMJ/Homework/main/COVID_Cases_Mortality_Features_By_Country.csv",
        "format": {
            "type": "csv",
            "parse": {
                "date": "date:\"%d/%m/%y\"",
                "temp": "number"
            }
        }
    },
    "params": [
        {
            "name": "Tourism_Above",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 80000000,
                "step": 2000,
                "name": "Minimum Tourism: "
            }
        },
        {
            "name": "Lockdown_Type_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "Full",
                    "Partial",
                    "Not Applicable"
                ],
                "labels": [
                    "Show All",
                    "Full",
                    "Partial",
                    "Not Applicable"
                ],
                "name": "Lockdown Type: "
            }
        }
    ],
    "transform": [
        {
            "calculate": "(datum.Lockdown_Type == '') ? 'Not Applicable' : datum.Lockdown_Type",
            "as": "updated_Lockdown_Type"
        },
        {
            "filter": "datum.Cases > 0"
        },
        {
            "filter": "datum.Deaths > 0"
        },
        {
            "filter": "datum.Tourism > Tourism_Above"
        },
        {
            "filter": "Lockdown_Type_selection == null || datum.updated_Lockdown_Type == Lockdown_Type_selection"
        },
        {
            "calculate": "datum.Cases/datum.Tourism * 10000",
            "as": "Cases per 10,000 Tourism"
        }
    ],
    "encoding": {
        "x": {
            "field": "Date_FirstConfirmedCase",
            "type": "temporal",
            "title": "Date of First Confirmed Case",
            "axis": {
                "tickCount": 7
            },
            "scale": {
                "type": "utc",
                "domain": [
                    "2020-01-22",
                    "2020-03-26"
                ]
            }
        },
        "y": {
            "field": "Date_FirstFatality",
            "type": "temporal",
            "title": "Date of First Fatality",
            "axis": {
                "tickCount": 6
            },
            "scale": {
                "type": "utc",
                "domain": [
                    "2020-01-23",
                    "2020-04-27"
                ]
            }
        }
    },
    "config": {
        "axisX": {
            "title": "Date",
            "format": "%d %b %y"
        },
        "axisY": {
            "title": "Date",
            "format": "%d %b %y"
        }
    },
    "layer": [
        {
            "mark": "circle",
            "encoding": {
                "size": {
                    "field": "Tourism",
                    "type": "quantitative",
                    "title": "Tourism Size",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            2000,
                            20000,
                            200000,
                            2000000,
                            20000000,
                            40000000,
                            80000000
                        ],
                        "range": [
                            10,
                            50,
                            150,
                            200,
                            300,
                            400,
                            500,
                            600
                        ]
                    },
                    "legend": {
                        "format": ".1s"
                    }
                },
                "color": {
                    "field": "updated_Lockdown_Type",
                    "type": "nominal",
                    "title": "Lockdown Type",
                    "scale": {
                        "domain": [
                            "Full",
                            "Partial",
                            "Not Applicable"
                        ],
                        "range": [
                            "#FF0000",
                            "#0000FF",
                            "#008000"
                        ]
                    }
                },
                "opacity": {
                    "value": 0.6
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal"
                    },
                    {
                        "field": "Tourism",
                        "type": "quantitative",
                        "format": ","
                    },
                    {
                        "field": "Date_FirstConfirmedCase",
                        "type": "temporal",
                        "title": "Date of First Confirmed Case"
                    },
                    {
                        "field": "Date_FirstFatality",
                        "type": "temporal",
                        "title": "Date of First Fatality"
                    },
                    {
                        "field": "Cases",
                        "type": "quantitative",
                        "format": ","
                    },
                    {
                        "field": "Population_Size",
                        "type": "quantitative",
                        "title": "Population Size",
                        "format": ","
                    },
                    {
                        "field": "Deaths",
                        "type": "quantitative",
                        "format": ","
                    },
                    {
                        "field": "Cases per 10,000 Tourism",
                        "type": "quantitative",
                        "format": ".2f"
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "left",
                "baseline": "middle",
                "dx": 7,
                "dy": -7,
                "fontSize": 12,
                "fontStyle": "italic"
            },
            "encoding": {
                "text": {
                    "value": "The COVID-19 outbreak originated in China"
                },
                "color": {
                    "value": "black"
                },
                "opacity": {
                    "condition": {
                        "test": "datum['Country'] == 'China'",
                        "value": 1
                    },
                    "value": 0
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "left",
                "baseline": "middle",
                "dx": -50,
                "dy": -10,
                "fontSize": 12,
                "fontStyle": "italic"
            },
            "encoding": {
                "text": {
                    "value": "Guinea-Bissau was the last to be hit by COVID-19."
                },
                "color": {
                    "value": "black"
                },
                "opacity": {
                    "condition": {
                        "test": "datum['Country'] == 'Guinea-Bissau'",
                        "value": 1
                    },
                    "value": 0
                }
            }
        }
    ]
}